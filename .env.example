# Server
SERVER_PORT=8080
SHUTDOWN_TIMEOUT_SECONDS=5

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRY_HOURS=24

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=drone_admin
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=drone_delivery
POSTGRES_SSLMODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiter
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Circuit Breaker
CB_FAILURE_THRESHOLD=5
CB_COOLDOWN_SECONDS=30

# Bulkhead
BULKHEAD_HEARTBEAT_POOL=100
BULKHEAD_MUTATION_POOL=50
BULKHEAD_ADMIN_POOL=20

# Geofence
ZONE_CENTER_LAT=24.7136
ZONE_CENTER_LNG=46.6753
ZONE_RADIUS_KM=50

# Drone
DRONE_SPEED_KMH=50
DRONE_LOCATION_CACHE_TTL_SECONDS=60
IDEMPOTENCY_TTL_SECONDS=300

# Mapbox
MAPBOX_BASE_URL=https://api.mapbox.com
MAPBOX_ACCESS_TOKEN=your-mapbox-token-here
